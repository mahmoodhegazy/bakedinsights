modules = ["nodejs-20", "web", "python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend"

[[workflows.workflow]]
name = "Frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd front-end/baked-insights-frontend && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5050
externalPort = 3000
exposeLocalhost = true

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "cd back-end/src && gunicorn --bind=0.0.0.0:5000 --reuse-port run:gunicorn_app"]
build = ["bash", "-c", "pip install -r back-end/requirements.txt && cd front-end/baked-insights-frontend && npm install && npm run build"]
